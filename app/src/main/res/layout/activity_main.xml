<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:padding="12dp"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">
        <Button android:id="@+id/callApiBtn" android:layout_width="0dp" android:layout_weight="1"
            android:layout_height="wrap_content" android:text="@string/call_api"/>
        <Button android:id="@+id/configBtn" android:layout_width="0dp" android:layout_weight="1"
            android:layout_height="wrap_content" android:text="@string/open_config"/>
    </LinearLayout>

    <TextView android:id="@+id/resultText" android:layout_width="match_parent"
        android:layout_height="0dp" android:layout_weight="1" android:paddingTop="12dp"
        android:text="Result will appear here" android:textIsSelectable="true"/>
</LinearLayout>

